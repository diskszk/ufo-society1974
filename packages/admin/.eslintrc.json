{
  "extends": [
    "@ufo-society1974/eslint-config/.eslintrc.client.json",
    "plugin:jsx-a11y/recommended",
    "plugin:storybook/recommended"
  ],
  "plugins": ["jsx-a11y"],
  "rules": {
    "jsx-a11y/aria-role": [
      2,
      {
        "allowedInvalidRoles": ["text"],
        "ignoreNonDOM": true
      }
    ]
  },
  "ignorePatterns": ["./__testMocks__"]
}
