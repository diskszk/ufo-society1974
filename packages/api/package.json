{
  "name": "api",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "run-s -c 'lint:*'",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:tsc": "tsc --noEmit",
    "build": "rimraf lib && tsc",
    "build:nest": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build:watch": "tsc --watch",
    "serve": "yarn run build && npx firebase emulators:start --only functions",
    "serve:js": "npx firebase emulators:start --only functions",
    "shell": "yarn run build && npx firebase functions:shell",
    "shell:js": "npx firebase functions:shell",
    "deploy": "npx firebase deploy --only functions",
    "logs": "npx firebase functions:log",
    "test": "jest",
    "test:o": "jest --onlyChanged",
    "test:f": "jest --onlyFailures",
    "test:cc": "jest --clearCache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./src/e2e/jest-e2e.json",
    "codegen": "rimraf ../types/generated && openapi2aspida -i ./swagger-spec.yaml -o ../types/generated/api",
    "openapi:export": "ts-node src/exportOpenAPIDocument.ts",
    "generate:type": "yarn openapi:export && yarn codegen"
  },
  "engines": {
    "node": "16"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "prepare": "husky install",
    "hooks": {
      "pre-commit": "yarn lint && yarn lint && yarn build"
    }
  },
  "dependencies": {
    "@nestjs/cli": "^10.1.7",
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/swagger": "^7.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.2",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^4.2.1",
    "helmet": "^6.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.5",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/jest": "27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.4.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.44.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "latest",
    "firebase-functions-test": "^0.2.0",
    "husky": "^8.0.2",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "openapi2aspida": "^0.21.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.5.4",
    "ufo-society1974-definition-types": "^0.1.6"
  },
  "private": true
}
